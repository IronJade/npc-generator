{
  "name": "npc-generator",
  "version": "1.1.0",
  "description": "Generate detailed D&D 5e NPCs for your RPG campaigns in Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "npc",
    "rpg",
    "character-generator",
    "dungeons-and-dragons"
  ],
  "author": "IronJade",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "builtin-modules": "^3.2.0",
    "esbuild": "^0.14.47",
    "obsidian": "latest",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "esbuild-plugin-d.ts": "^1.1.0"
  }
}
